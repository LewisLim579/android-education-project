<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="AppTheme.MyTheme">
        <item name="android:textViewStyle">@style/MyTextStyle</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="MyTextStyle">
        <item name="android:textColor">#ff00ff</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="MyTextStyle.Title">
        <item name="android:textSize">40sp</item>
    </style>

    <style name="MyTextAppear" parent="android:TextAppearance">
        <item name="android:textColor">#00FF00</item>
        <item name="android:textSize">40sp</item>
        <item name="android:shadowColor">#FF0000</item>
        <item name="android:shadowDx">5</item>
        <item name="android:shadowDy">5</item>
        <item name="android:shadowRadius">5</item>
    </style>

</resources>